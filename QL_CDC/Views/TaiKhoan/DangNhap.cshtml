
@{
    ViewData["Title"] = "DangNhap";
    Layout = null;
}
<script src="~/js/jquery-3.3.1.min.js"></script>
<link href="/template/css/style.css" rel="stylesheet">
<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">

        <div class="col-lg-12">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <a asp-action="Index" asp-controller="SanPham" class="text-decoration-none">
                        <h2 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">CDC</span>ChoDoCu</h2>
                    </a>
                    <div class="navbar-nav ml-auto py-0">
                        <a href="@Url.Action("DangNhap","Home")" class="nav-item nav-link dndk" style="color: #0f893b">Đăng nhập</a>
                        <a href="@Url.Action("DangKy","Home")" class="nav-item nav-link dndk">Đăng ký</a>
                    </div>
                </div>
            </nav>
            <div id="dndkdiv">
                <table class="dndktable">
                    <tr>
                        <td>
                            <label class="labeldn" style="color: #0f893b; font-size: 24px">MSSV: </label>
                        </td>
                        <td>
                            <input type="text" class="form-control" id="tk"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label class="labeldn" style="color: #0f893b; font-size: 24px">Mật khẩu: </label>
                        </td>
                        <td>
                            <input type="password" class="form-control" id="mk"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                        </td>
                        <td>
                            <div class="btndndk" onclick="DangNhap()">Đăng nhập</div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function DangNhap() {
        var tk = document.getElementById("tk").value;
        var mk = document.getElementById("mk").value;
        $.ajax({
            url: '/TaiKhoan/TaskDangNhap',
            type: 'post',
            data: {
                tk: tk,
                mk: mk
            },
            success: function (data) {
                // console.log(data);
                if (data == true) {
                    window.location.href = "/SanPham/Index";
                }
                else {
                    alert("Bạn đã nhập sai tài khoản hoặc mật khẩu");
                }
            }
        })
    }
</script>