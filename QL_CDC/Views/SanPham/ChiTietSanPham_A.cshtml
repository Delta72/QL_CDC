@model SanPhamModel
@{
    ViewData["Title"] = "ChiTietSanPham_A";
    Layout = "~/Views/Shared/_ThirdLayout.cshtml";
}

@{ 
    string dongia = string.Format("{0:#,##0.########}", Model.dongiasp);
    string giagoc = string.Format("{0:#,##0.########}", Model.giagocsp);
}
<!-- Shop Detail Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    <div class="carousel-item active">
                        <img class="w-100 h-100" src="@Model.anhsp[0]" alt="Image">
                    </div>
                    @for (var i = 1; i < Model.anhsp.Count(); i++)
                    {
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="@Model.anhsp[i]" alt="Image">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left muiten"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-2x fa-angle-right muiten"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">@Model.tensp</h3>
            <div class="d-flex mb-3">
                <div class="text-primary mr-2">
                    <small class="fas fa-star"></small>
                    <small class="fas fa-star"></small>
                    <small class="fas fa-star"></small>
                    <small class="fas fa-star-half-alt"></small>
                    <small class="far fa-star"></small>
                </div>
                <small class="pt-1"> @Model.danhgiasp </small>
            </div>
            <div class="" style="display: flex;">
                <h3 class="font-weight-semi-bold mb-4" style="width: 28%"> @dongia Đ</h3>  <h3 class="font-weight-semi-bold mb-4" style="width: 28%"><del>@giagoc Đ</del></h3>
            </div>
            <div class="d-flex mb-3" style="width: 100%;display: flex;">
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 30%;">Đăng bởi:</p>
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 70%;">@Model.nguoidangsp</p>
            </div>
            <div class="d-flex mb-3" style="width: 100%;display: flex;">
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 30%;">Ngày đăng:</p>
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 70%;">@Model.ngaydangsp</p>
            </div>
            <div class="d-flex mb-3" style="width: 100%;display: flex;">
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 30%;">Thời gian sử dụng:</p>
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 70%;">@Model.thoigiansp tháng</p>
            </div>
            <div class="d-flex mb-3" style="width: 100%;display: flex;">
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 30%;">Số lượng còn lại:</p>
                <p class="text-dark font-weight-medium mb-0 mr-3" style="width: 70%;">@Model.soluongsp sản phẩm</p>
            </div>
            <div class="d-flex align-items-center mb-4 pt-2 dieukhiendathang">
                <div class="input-group quantity mr-3" style="width: 130px;">
                    <div class="input-group-btn">
                        <button class="btn btn-primary btn-minus" onclick="Giam1()">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <input type="text" id="soluongsp" class="form-control bg-secondary text-center" value="1" oninput="ChiNhapSo(this); KiemTraSoLuongSanPham(@Model.soluongsp);">
                    <div class="input-group-btn">
                        <button class="btn btn-primary btn-plus" onclick="Tang1(@Model.soluongsp)">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <button class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ </button>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link dndk active" style="color: black" data-toggle="tab" href="#tab-pane-1">Mô tả</a>
                <a class="nav-item nav-link dndk" style="color: black" data-toggle="tab" href="#tab-pane-3">Đánh giá người bán (0)</a>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-pane-1">
                    <h4 class="mb-3">Mô tả sản phẩm</h4>
                    <p style="color: black;">@Model.motasp</p>
                </div>
                <div class="tab-pane fade" id="tab-pane-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="mb-4">X Đánh giá cho SV</h4>
                            <div class="media mb-4">
                                <img src="img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                <div class="media-body">
                                    <h6>John Doe<small> - <i>01 Jan 2045</i></small></h6>
                                    <div class="text-primary mb-2">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                    <p style="color: black;">Bình luận nè</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h4 class="mb-4">Thêm bình luận về người bán này</h4>
                            <div class="d-flex my-3">
                                <p class="mb-0 mr-2">Đánh giá của bạn * :</p>
                                <div class="text-primary danhgiasao">
                                    <i class="far fa-star" id="sao1" onclick="doisao(1)"></i>
                                    <i class="far fa-star" id="sao2" onclick="doisao(2)"></i>
                                    <i class="far fa-star" id="sao3" onclick="doisao(3)"></i>
                                    <i class="far fa-star" id="sao4" onclick="doisao(4)"></i>
                                    <i class="far fa-star" id="sao5" onclick="doisao(5)"></i>
                                </div>
                            </div>
                            <form>
                                <div class="form-group">
                                    <label for="message">Bình luận * :</label>
                                    <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                                </div>
                                <div class="form-group mb-0">
                                    <input type="submit" value="Bình luận" class="btn btn-primary px-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->
<script>
    function ChiNhapSo(e) {
        e.value = e.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');
    }
    function KiemTraSoLuongSanPham(x) {
        var sl = $('#soluongsp').val();
        if (sl > x) {
            document.getElementById('soluongsp').value = x;
        }
        if (sl < 1) {
            document.getElementById('soluongsp').value = 1;
        }
    }
    function Tang1(x) {
        var sl = $('#soluongsp').val();
        if (parseInt(sl) + 1 > x) {
            document.getElementById('soluongsp').value = x;
        }
        else {
            document.getElementById('soluongsp').value = parseInt(sl) + 1;
        }
    }
    function Giam1() {
        var sl = $('#soluongsp').val();
        if (parseInt(sl) == 1) {
            document.getElementById('soluongsp').value = 1;
        }
        else {
            document.getElementById('soluongsp').value = parseInt(sl) - 1;
        }
    }
    function doisao(id) {
        for (var i = 1; i <= 5; i++) {
            document.getElementById('sao' + i).className = "far fa-star";
            
        }
        for (var i = 1; i <= id; i++) {
            document.getElementById('sao' + i).className = "fas fa-star";
        }
    }
</script>