@if (!User.Identity.IsAuthenticated)
{
    <a href="@Url.Action("DangNhap","Home")" class="nav-item nav-link dndk">Đăng nhập &nbsp<i class="fa fa-sign-in mr-1"></i></a>
    <a href="@Url.Action("DangKy","Home")" class="nav-item nav-link dndk">Đăng ký &nbsp<i class="fa fa-user-plus"></i></a>
}
else
{
    <a href="@Url.Action("DangNhap","Home")" class="nav-item nav-link dndk">Xin chào @User.Identity.Name <i class="fa fa-user"></i></a>
    <a href="@Url.Action("DangKy","Home")" class="nav-item nav-link dndk">Cửa hàng <i class="fa fa-dollar"></i></a>
    <a href="@Url.Action("LogOut","Home")" class="nav-item nav-link dndk">Đăng xuất <i class="fa fa-sign-out"></i></a>
}
